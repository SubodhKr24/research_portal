<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.1"
	client="site"
	method="upgrade">
	<name>Mod ST Weather</name>
	<author>And Minh</author>
	<creationDate>Oct 2013</creationDate>
	<copyright>Copyright (C) by Anh Minh.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>minhkhmt1k3@gmail.com</authorEmail>
	<authorUrl>beautiful-templates.com</authorUrl>
	<version>3.0.0</version>
	<description>ST_MOD_ST_WEATHER_DESC</description>
	<files>
		<filename module="mod_st_weather">mod_st_weather.php</filename>
		<folder>icon</folder>
		<filename>index.html</filename>		
		<filename>mod_st_weather.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_st_weather.ini</language>
		<language tag="en-GB">en-GB.mod_st_weather.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="city_name"
					type="text"
					label="ST_CITY_NAME"
					default="Hanoi"
					description="ST_CITY_NAME_DESC" />
				<field
					name="country"
					type="text"
					label="ST_COUNTRY"
					default="VN"
					description="ST_COUNTRY_DESC" />
				<field
					name="your_key"
					type="text"
					label="ST_YOUR_KEY"
					default="a267b75362c4ad19"
					description="ST_YOUR_KEY_DESC" />
					
			</fieldset>
			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
